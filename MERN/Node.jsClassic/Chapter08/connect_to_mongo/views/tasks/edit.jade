h1 Edit task view
form(method='post', action='/tasks/' + task.id)
	fieldset
		legend Editing task
		div.clearfix
			label Task
			div.input
				input(name='task', class='xlarge', value='#{task.task}')
		div.actions
			input(type='submit', value='Save', class='btn primary')
			button(type='reset', class='btn') Cancel